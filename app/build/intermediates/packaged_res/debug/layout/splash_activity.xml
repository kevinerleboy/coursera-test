<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bmi_logo"
        android:layout_marginTop="230dp"
        android:contentDescription="@string/bmi_logo_splash_activity">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bmi_rechner_app_titel_splash_activity"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/dunkelblau"
        android:fontFamily="@font/raleway"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logoImageView"
        android:layout_marginTop="20dp"
        android:id="@+id/app_titel">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/made_by_splash_activity"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/mittelgrau"
        android:fontFamily="@font/raleway"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/app_titel"
        android:layout_marginTop="175dp"
        android:textAlignment="center"
        android:id="@+id/made_by_text">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chiara_eisinger_kevin_thuro_timo_morbitzer_splash_activity"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/mittelgrau"
        android:fontFamily="@font/raleway"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/made_by_text"
        android:layout_marginTop="15dp"
        android:id="@+id/entwickler">
    </TextView>





</RelativeLayout>